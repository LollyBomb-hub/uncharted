{
  "compilerOptions": {
    // For dom
//    "lib": [
//      "dom",
//      "dom.iterable",
//      "esnext"
//    ],
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    // lib
    "outDir": "dist",
//    "outDir": "public",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": [
//    "src/index.tsx"
    "src/index.ts"// <- lib only
  ],
  // lib only
  "exclude": [
    "node_modules",
    "public",
    "package.json"
  ]
}

